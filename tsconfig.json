{
  "compilerOptions": {
    "rootDir": "../",
    "baseUrl": "./src",
    "outDir": "./dist/",
    "sourceMap": true,
    "noImplicitAny": true,
    "module": "esnext",
    "target": "es2017",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "declaration": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "jsx": "react-jsx",
    "jsxImportSource": "preact",
    "paths": {
      "@motion-canvas/core/*": [
        "../../core/src/*",
      ]
    }
  }
}
